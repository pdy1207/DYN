<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--android:background="#D6D6D6"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSetting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#000046"
            android:padding="25dp"
            android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_next"></ImageButton>
        <Button
            android:id="@+id/btnHomeTitle2"
            style="@style/styleDy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000046"
            android:gravity="center"
            android:text="dynews"
            android:textColor="@color/white"
            android:textSize="25dp" />
    </LinearLayout>
<LinearLayout
    android:id="@+id/back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/papago" />


        <EditText
            android:id="@+id/translationText"
            style="@style/styleDy"
            android:layout_width="284dp"
            android:layout_height="150dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/hyemin"
            android:hint="번역할 영어를 입력해주세요"
            android:inputType="textMultiLine"
            android:textColorHint="	#969696" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp">

        <TextView

            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="23dp"
            android:background="#ffffff"
            android:fontFamily="@font/hyemin"
            android:gravity="center"
            android:text="Korea"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="#98ffffff"
            app:srcCompat="@drawable/korea" />

        <Button
            android:id="@+id/translationButton"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/custom_ripple_effect2"
            android:gravity="center"
            android:text="번역하기" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="#98ffffff"
            app:srcCompat="@drawable/usa" />

        <TextView
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:fontFamily="@font/hyemin"
            android:gravity="center"
            android:text="English"
            android:textColor="@color/black" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="vertical">


        <TextView
            android:id="@+id/resultText"
            style="@style/styleDy"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/hyemin"
            android:gravity="center"
            android:hint="행복한 하루 되세요."
            android:textColor="@color/black"
            android:textColorHint="#969696" />

    </LinearLayout>
    <Button
        android:id="@+id/translationButton2"
        android:layout_width="365dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/custom_ripple_effect2"
        android:gravity="center"
        android:text="today's weather" />

    <LinearLayout
        android:id="@+id/weatherLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/no_city"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/cityView"
            style="@style/styleDy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"

            android:textColor="#98000000"
            android:textColorHint="#98000000"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/weatherView"
                style="@style/styleDy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:gravity="center"
                android:textColor="#98000000"
                android:textColorHint="#98000000"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/tempView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cityView"
                app:layout_constraintVertical_bias="0.638" />

            <TextView
                android:id="@+id/tempView"
                style="@style/styleDy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/bmjua"
                android:gravity="center"
                android:textColor="#98000000"
                android:textColorHint="#98000000"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cityView"
                app:layout_constraintVertical_bias="0.849" />
        </LinearLayout>

        <TextView
            android:id="@+id/dateView"
            style="@style/styleDy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bmjua"
            android:gravity="center"
            android:textColor="#98000000"
            android:textColorHint="#98000000"
            android:visibility="visible" />
    </LinearLayout>


</LinearLayout>

</LinearLayout>
